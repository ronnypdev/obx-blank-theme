<footer class="bg-faded py-5">
  <div class="container">
    <div class="row">
    {%- for block in section.blocks -%}
      {%- case block.type -%}
        {%- when 'link_list' -%}
          {%- render 'footer-block-link-list', fields: block.settings -%}
        {%- when 'payment_icons' -%}
          {%- render 'footer-block-payment-icons' -%}
      {%- endcase -%}
    {%- endfor -%}
    </div>
  </div>

</footer>
{% schema %}
{
  "name": "Footer",
  "blocks": [
    {
      "type": "link_list",
      "name": "Navigation menu",
      "settings": [
        {
          "id": "link_list",
          "type": "link_list",
          "label": "Navigation menu"
        }
      ]
    },
    {
      "type": "payment_icons",
      "name": "Payments icons"
    }
  ]
}
{% endschema %}